---
import { Code } from 'astro:components';

import { stackCode } from '@constants/stack';
---

<Code
    wrap
    lang="typescript"
    code={stackCode}
    theme={'houston'}
/>

<style is:global>

    /* Custom styling for code block line numbers */
    pre.astro-code {
        @apply text-base bg-transparent !important;
    }

    pre.astro-code code {
        @apply block font-console antialiased;
        counter-reset: step;
        counter-increment: step 0;
    }

    pre.astro-code code .line {
        @apply relative;
    }

    pre.astro-code code .line::before {
        content: counter(step);
        counter-increment: step;
        @apply text-gray-600 pr-2;
    }

</style>