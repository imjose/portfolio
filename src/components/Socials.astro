---
import SocialIcon from './SocialIcon.astro';

interface Social {
    icon: 'github' | 'linkedIn' | 'twitter' | 'email';
    link: string;
    title?: string;
}

const socials: Social[] = [{
    icon: 'linkedIn',
    link: 'https://www.linkedin.com/in/imjosearce',
    title: 'View LinkedIn Profile'
}, {
    icon: 'twitter',
    link: 'https://x.com/imjosearce',
    title: 'View Twitter Profile'
}, {
    icon: 'github',
    link: 'https://github.com/imjose',
    title: 'View GitHub Profile'
}, {
    icon: 'email',
    link: 'mailto:jose.arce@live.com',
    title: 'Send Email'
}];

---

<!-- Start: Social Links -->
<div class="flex flex-wrap gap-12 mt-6 justify-evenly">

    {socials.map(social =>
        <a
            href={social.link}
            target="_blank"
            title={social.title}
            rel="noopener noreferrer"
            class="flex items-center justify-center w-10 h-10 rounded-lg bg-black text-gray-100 transition-all duration-150 border border-gray-600 hover:bg-primary hover:-translate-y-0.5">
            <SocialIcon icon={social.icon} />
        </a>
    )}

</div>
<!-- End: Social Links -->